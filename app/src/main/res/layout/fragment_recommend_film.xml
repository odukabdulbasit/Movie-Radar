<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="recommendfilmmodel"
    type="com.odukabdulbasit.movieradar.recommendfilm.RecommendFilmViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recommendfilm.RecommendFilmFragment">


        <TextView
            android:id="@+id/shake_the_phoneTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin_size"
            android:layout_marginEnd="@dimen/large_margin_size"
            android:padding="@dimen/normal_medium_margin_size"
            android:text="@string/please_shake_the_phone_to_get_film_recommendation"
            android:textSize="@dimen/large_text_size"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>